{
  "name": "morrocoy-theme",
  "displayName": "Morrocoy Theme",
  "description": "Morrocoy Theme based on Tailwind colors",
  "publisher": "lucas-curti",
  "version": "0.0.18",
  "engines": {
    "vscode": "^1.90.0",
    "node": ">=20.18.1 <25.0.0"
  },
  "icon": "img/icon.png",
  "categories": [
    "Themes"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Morrocoy Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/morrocoy-dark.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucascurti/morrocoy-theme"
  },
  "author": "Lucas Curti <lucas.curti@gmail.com>",
  "vsce": {
    "dependencies": false
  },
  "scripts": {
    "release": "auto shipit",
    "package": "vsce package --no-dependencies",
    "publish:ovsx": "ovsx publish --no-dependencies",
    "publish:vscode": "vsce publish --no-dependencies",
    "test:ovsx": "echo 'Add OVSX_PAT=your_token to .env file'",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache --quiet",
    "lint:fix": "eslint . --fix --cache --quiet",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "check:fix": "npm run typecheck && npm run lint:fix && npm run format",
    "generate:colors": "tsx lib/MorrocoyTheme/resources/generateTailwindColors.ts",
    "generate:vscode-types": "tsx lib/MorrocoyTheme/resources/generateVSCodeColorTypes.ts",
    "generate:scope-types": "tsx lib/MorrocoyTheme/resources/generateTextMateScopeTypes.ts",
    "generate:semantic-types": "tsx lib/MorrocoyTheme/resources/generateSemanticTokenTypes.ts",
    "generate": "run-s generate:*",
    "build:themes": "tsx tools/buildThemes.ts",
    "build:themes:watch": "tsx --watch tools/buildThemes.ts"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "11.3.6",
    "@auto-it/first-time-contributor": "11.3.6",
    "@auto-it/vscode": "11.3.6",
    "@auto-it/pr-body-labels": "11.3.6",
    "@auto-it/released": "11.3.6",
    "@eslint/eslintrc": "3.3.3",
    "@types/culori": "^4.0.1",
    "@types/node": "^25.0.2",
    "@typescript-eslint/eslint-plugin": "8.49.0",
    "@typescript-eslint/parser": "8.49.0",
    "@vscode/vsce": "^3.2.1",
    "auto": "11.3.6",
    "culori": "^4.0.2",
    "dotenv-cli": "^11.0.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "globals": "^16.2.0",
    "npm-run-all2": "^8.0.4",
    "ovsx": "^0.10.7",
    "prettier": "3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
